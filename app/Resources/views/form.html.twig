{% extends "::base.html.twig" %}

{% block title %}
    {{ parent() }} convertor
    | Keep IT Simple PHP
{% endblock %}

{% block body %}
    {% block before_content %}{% endblock %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input type="submit" class="btn btn-primary" value="{{ 'Convert' | trans }}" />
        </div>
    </div>
    {{ form_end(form) }}

    {% block response %}
    {% if result is defined and result is not empty %}
        <div class="row">
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <pre><code>{{ result | raw_code }}</code></pre>
                </div>
            </div>
        </div>
    {% endif %}
    {% endblock %}

    {% block after_content %}{% endblock %}
{% endblock %}
